{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "title": {
        "text": {
            "expr": "'LULUCF 2023 land cover type distribution for '+data('LULUCF_stats')[0].name"
        },
        "anchor": "start",
        "fontSize": 14,
        "fontWeight": "bold"
    },
    "description": "Bar chart displaying land use in 2023 with interactive highlighting.",
    "data": {"name": "LULUCF_stats"},
    "transform": [
        {
            "fold": [
                "forestland",
                "cropland",
                "grassland",
                "wetlands",
                "settlements",
                "other lands"
            ],
            "as": ["land_type", "area"]
        },
        {
            "calculate": "datum.land_type === 'forestland' ? 'Forestland' : datum.land_type === 'cropland' ? 'Cropland' : datum.land_type === 'grassland' ? 'Grassland' : datum.land_type === 'wetlands' ? 'Wetlands' : datum.land_type === 'settlements' ? 'Settlements' : 'Other lands'",
            "as": "land_type_capitalized"
        }
    ],
    "mark": {"type": "bar", "tooltip": true, "cursor": "pointer"},
    "encoding": {
        "x": {
            "field": "land_type_capitalized",
            "type": "nominal",
            "title": "Land Type",
            "sort": "-y"
        },
        "y": {"field": "area", "type": "quantitative", "title": "Area (ha)"},
        "color": {
            "field": "land_type",
            "type": "nominal",
            "scale": {
                "domain": [
                    "forestland",
                    "grassland",
                    "cropland",
                    "other lands",
                    "settlements",
                    "wetlands"
                ],
                "range": [
                    "#334F22",
                    "#479B26",
                    "#B88E14",
                    "#7F7F7F",
                    "#723B0A",
                    "#1A4A92"
                ]
            },
            "legend": null
        },
        "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.6},
        "tooltip": [
            {
                "field": "land_type_capitalized",
                "type": "nominal",
                "title": "Land Type"
            },
            {
                "field": "area",
                "type": "quantitative",
                "format": ",.2f",
                "title": "Area (ha)"
            }
        ]
    },
    "params": [
        {
            "name": "hover",
            "select": {
                "type": "point",
                "fields": ["land_type"],
                "on": "mouseover",
                "clear": "mouseout"
            }
        }
    ]
}